<%= form_for @user do |f| %>

  <%= f.label :username %>
  <%= f.text_field :username %>

  <br><br>

  <%= f.label :password %>
  <%= f.text_field :password %>

  <br><br>

  <%= f.label :password_confirmation %>
  <%= f.text_field :password_confirmation %>

  <br><br>

  <%= f.submit %>

<% end %>
